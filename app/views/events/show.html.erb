<%= content_for :title, @event.title %>

<% tabindex_on '#search_field' %>

<% content_for :discovery_insert do %>
  <link rel="alternate" type="application/x-wiki" title="Edit this page" href="<%= edit_event_url(@event) %>" />
<% end %>

<% content_for :open_graph_tags do %>
  <meta property="og:title" content="<%= @event.title %>" />
  <meta property="og:description" content="<%= @event.description %>" />
  <meta property="og:site_name" content="<%= SETTINGS.name %>" />
  <meta property="og:url" content="<%= event_url(@event) %>">
<% end %>

<% content_for :javascript_insert do %>
  <%= javascript_include_tag 'mustache' %>
  <script type='text/javascript'>
    $(function() {
      var plan = $('.external.plancast.plan:first');
      if (plan.length > 0) {
        var plan_id = plan.text().split('=')[1];
        $.getJSON("http://api.plancast.com/02/plans/show.json?jsonp=?",
          { extensions: "attendees",
            plan_id: plan_id },
          function(data) {
            if (data.attendees.length > 0) {
              $('.attendees').append(Mustache.to_html($('#attendees-template').html(), data));
            }
          }
        );
      }
    })
  </script>
<% end %>

<% content_for :javascript_insert do %>
  <script type='text/javascript'>
    $(function() {
      $(document).ready(function(){
        // Add google analytics event tracking to links and emails in description
        //
        // pulls meta data from page
        var organization = $('.org.p-name[itemprop="name"]').text();
        var category = 'category: Engagement - Event';
        var $description = $('.description[itemprop="description"]');

        // then add listeners to links
        $description.select('a[href^="http"]').click(function(event) {
          var action = 'link clicked';
          ga('send', 'event', category, action, organization);
        });

        // then add listeners to emails and links
        $description.select('a[href^="mailto"]').click(function(event) {
          var action = 'email clicked';
          ga('send', 'event', category, action, organization);
        });
      });
    })
  </script>
<% end %>

<a href="#" id="event_sidebar_toggle" class="expander_toggle">Export or edit this event...</a>

<div id="event_sidebar" class='single_view_right sidebar'>
  <h3 class='first'>Export to</h3>
  <ul>
    <li><%= link_to "Google Calendar", google_event_export_link(@event), :id => "google_calendar_export", :target => "_blank" %></li>
    <li><%= link_to 'iCalendar file', "#{event_url(@event)}.ics" %></li>
    <li>
      <%= link_to_function 'hCalendar markup', '$("#hcal_field").toggle()' %>
      <div id="hcal_field" style="display: none;">
        <%= text_area_tag 'hCalendar',
          h(
            render :partial => 'hcal',
                      :locals => {
                        :event => @event,
                        :show_year => true
                      },
                      :formats => [:html]
          ), :rows => 10, :cols => 80 %>
      </div>
    </li>
  </ul>
<hr />
  <div id='edit_link'>
    <% if @event.locked %>
    <p>This event is currently locked and cannot be edited. Please contact an admin for assistance.</p>
    <% else %>
    <p>
      You can 
      <%= link_to "edit", edit_event_url(@event) %>,
      <%= link_to "clone", clone_event_url(@event) %>,
      or 
      <%= link_to "delete", event_url(@event), :method => :delete, :confirm => "Are you sure?" %>
      this event.
    </p>
    <% end %>
  </div>
<hr />
  <div id='metadata'>
      <%= datestamp(@event) %>
  </div>
</div>

<%= render :partial => 'events/item', :locals => {:event => @event} %>
